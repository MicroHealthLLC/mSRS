<table class="table table-responsive table-hover">
  <thead>
  <tr>
    <th>Date</th>
    <th>Locked</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @plans.each do |plan| %>
    <tr>
      <td><%= plan.date %></td>
      <td><%= plan.is_locked? %></td>
      <td><%= link_to 'Show', plan %></td>
      <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
      <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
