<%= form_with(model: plan, local: true, html: {class: 'form-horizontal'}) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-md-2"> Name: </label>
    <div class="col-md-9">
      <%= form.date_field :date , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2"> Locked </label>
    <div class="col-md-9">
      <%= form.check_box :is_locked %>
    </div>
  </div>


  <div class="form-group" >
    <div class="col-md-11">
      <%= link_to t('button_cancel'), :back, class: 'btn btn-warning pull-right' %>
      <%= form.submit t(:button_create), class: 'btn btn-success pull-right' %>
    </div>
  </div>
<% end %>
