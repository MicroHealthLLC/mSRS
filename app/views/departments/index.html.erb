

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Plan</th>
      <th>Is locked</th>
      <th>Strategic description</th>
      <th>Customer description</th>
      <th>Internal description</th>
      <th>Learning description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.plan_id %></td>
        <td><%= department.is_locked %></td>
        <td><%= department.strategic_description %></td>
        <td><%= department.customer_description %></td>
        <td><%= department.internal_description %></td>
        <td><%= department.learning_description %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

