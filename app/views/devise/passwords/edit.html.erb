<h2>Change your password</h2>
<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),html: { method: :put, id: 'login-form', class: 'smart-form client-form ' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <fieldset>
        <section>
          <label class="label">New password</label>
          <label class="input"> <i class="icon-append fa fa-lock"></i>
            <%= f.email_field :password, autofocus: true %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </label>
        </section>
        <section>
          <label class="label">Confirm new password</label>
          <label class="input"> <i class="icon-append fa fa-lock"></i>
            <%= f.email_field :password_confirmation, autocomplete: "off" %>
          </label>
        </section>
      </fieldset>
      <footer>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check"></i> Save
        </button>
      </footer>
  <% end %>

  <%= render "devise/shared/links" %>
</div>